<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="191dp"
        android:layout_height="31dp"
        android:text='Приют "Надежда"'
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:layout_editor_absoluteX="186dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кого ты себе хочешь взять?"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="87dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выбери одну категорию питомца"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="130dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="1dp"
        android:text="@string/cat_text"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Собаки"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="343dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Попугаи"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="103dp"
        tools:layout_editor_absoluteY="510dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Хомяки"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="266dp"
        tools:layout_editor_absoluteY="510dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="31dp"
        android:layout_height="37dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="212dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="31dp"
        android:layout_height="37dp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="213dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="130dp"
        android:layout_height="130dp"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="380dp"
        tools:srcCompat="@drawable/xom9k_layer" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="130dp"
        android:layout_height="130dp"
        tools:layout_editor_absoluteX="63dp"
        tools:layout_editor_absoluteY="380dp"
        tools:srcCompat="@drawable/popug_layer" />

    <RadioButton
        android:id="@+id/radioButton4"
        android:layout_width="31dp"
        android:layout_height="37dp"
        tools:layout_editor_absoluteX="193dp"
        tools:layout_editor_absoluteY="380dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="31dp"
        android:layout_height="37dp"
        tools:layout_editor_absoluteX="32dp"
        tools:layout_editor_absoluteY="380dp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="212dp"
        android:contentDescription="@string/cat"
        app:layout_constraintStart_toEndOf="@+id/radioButton"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/cat_layer" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="130dp"
        android:layout_height="130dp"
        tools:layout_editor_absoluteX="224dp"
        tools:layout_editor_absoluteY="213dp"
        tools:srcCompat="@drawable/dog_layer" />
</androidx.constraintlayout.widget.ConstraintLayout>